<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.che.recyclerviewjsontwo.Writer">
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/button"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/inputText"/>
    <EditText
            android:layout_width="342dp"
            android:layout_height="178dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Text"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/inputText"
            tools:layout_editor_absoluteY="76dp" app:layout_constraintHorizontal_bias="0.44"
    />
    <EditText
            android:layout_width="342dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:hint="input url image"
            android:ems="10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:id="@+id/urlImage"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>



</android.support.constraint.ConstraintLayout>